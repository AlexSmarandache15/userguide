<topic id="word-line-actions">
  <title>Shortcut Actions in Text Mode</title>
  <prolog>
    <metadata>
      <keywords>
        <indexterm>Text editing mode<indexterm>Shortcut actions</indexterm></indexterm>
        <indexterm>XML documents<indexterm>Text Mode editing<indexterm>Shortcut
